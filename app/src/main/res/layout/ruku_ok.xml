<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#edecf2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#f6f6f6">

        <ImageView
            android:id="@+id/btn_left"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/v_header_btn"
            android:clickable="true"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:src="@drawable/ico_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="入库"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/btn_right"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center"
            android:text="修改"
            android:textColor="@color/main_blue"
            android:textSize="@dimen/btn_label"
            android:visibility="invisible" />
    </LinearLayout>

    <include layout="@layout/v_line_top" />

    <ImageView
        android:layout_marginTop="30dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/v_img_bg_blue_round"
        android:padding="6dp"
        android:src="@drawable/ico_ru_ku1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="一类入库单\n入库操作成功!"
        android:textSize="16dp" />


    <TextView
        android:layout_margin="20dp"
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/v_item_bg"
        android:clickable="true"
        android:gravity="center"
        android:text="创建新的入库单"
        android:textSize="18dp" />


    <TextView
        android:layout_margin="20dp"
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/v_item_bg"
        android:clickable="true"
        android:gravity="center"
        android:text="返回首页"
        android:textSize="18dp" />




</LinearLayout>
