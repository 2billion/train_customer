<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#f6f6f6">

        <ImageView
            android:id="@+id/btn_left"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/v_header_btn"
            android:clickable="true"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:src="@drawable/ico_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="配件入库"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/btn_right"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center"
            android:text="添加"
            android:textColor="@color/main_blue"
            android:textSize="@dimen/btn_label" />
    </LinearLayout>

    <include layout="@layout/v_line_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:text="库位编码"
            android:textSize="@dimen/btn_label" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/input_1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/v_input_login"
                android:hint="@string/hint_main_kuwei"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/gray666"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/btn_label" />


            <ImageView
                android:id="@+id/input_del_1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical|right"
                android:layout_weight="1"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ico_del_48_light"
                android:visibility="invisible" />
        </FrameLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:text="BST物料编码："
            android:textSize="@dimen/btn_label" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/v_input_login"
                android:hint="@string/hint_main_bst"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/gray666"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/btn_label" />


            <ImageView
                android:id="@+id/input_del_2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical|right"
                android:layout_weight="1"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/ico_del_48_light"
                android:visibility="invisible" />
        </FrameLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:text="入库数量"
            android:textSize="@dimen/btn_label" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/v_input_login"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="1"
                android:textColor="@color/gray666"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/btn_label" />


            <ImageView
                android:id="@+id/input_del_3"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical|right"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/ico_del_48_light"
                android:visibility="invisible" />
        </FrameLayout>

        <Button
            android:id="@+id/btn_add"
            style="@style/btn_blue"
            android:layout_width="match_parent"
            android:layout_marginBottom="100dp"
            android:layout_marginTop="30dp"
            android:text="添加并继续" />

    </LinearLayout>


</LinearLayout>