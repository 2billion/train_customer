<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#edecf2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#f6f6f6">

        <ImageView
            android:id="@+id/btn_left"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/v_header_btn"
            android:clickable="true"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:src="@drawable/ico_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="入库"
            android:textSize="18dp" />

        <TextView
            android:visibility="invisible"
            android:id="@+id/btn_right"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center"
            android:text="修改"
            android:textColor="@color/main_blue"
            android:textSize="@dimen/btn_label" />
    </LinearLayout>

    <include layout="@layout/v_line_top" />


    <TextView
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:textSize="16dp"
        android:layout_height="wrap_content"
        android:text="请选择入库类型" />

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:background="@drawable/v_item_bg"
        android:clickable="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="6dp"
            android:background="@drawable/v_img_bg_blue_round"
            android:src="@drawable/ico_ru_ku1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingLeft="40dp"
            android:text="一类入库单"
            android:textSize="16dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_light"></View>


    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:background="@drawable/v_item_bg"
        android:clickable="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:layout_width="40dp"
            android:background="@drawable/v_img_bg_blue_round"
            android:layout_height="40dp"
            android:padding="6dp"
            android:src="@drawable/ico_ru_ku2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingLeft="40dp"
            android:text="二类入库单"
            android:textSize="16dp" />

    </LinearLayout>


</LinearLayout>
