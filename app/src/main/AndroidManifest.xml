<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.train.train_manager">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 从sdcard中读取数据的权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.honeywell.decode.permission.DECODE" />

    <uses-permission android:name="android.permission.NFC" />
    <uses-feature
        android:name="android.hardware.nfc"
        android:required="true" />

    <application
        android:name=".base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="服务端"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.linchaolong.android.imagepicker.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat"/>
        <activity android:name=".act.SplashActivity">
            <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".act.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".act.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.nfc.action.TAG_DISCOVERED" />
                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>
        <!-- 我的 -->
        <activity android:name=".act.mine.MineActivity">
            <intent-filter>
                <action android:name="android.intent.action.AUTOMATICBARCODEACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".act.ruku.RukuActivity"></activity>

        <activity android:name=".act.chuku.ChuKuActivity"></activity>
        <activity android:name=".act.chuku_info.ChukuInfoActivity"></activity>
        <activity android:name=".act.kucun.KuCunActivity"></activity>

        <activity android:name=".act.ruku_one.ruku_record.RukuRecordActivity"></activity>
        <activity android:name=".act.ruku_one.ruku_info.RukuInfoActivity"></activity>
        <activity android:name=".act.ruku_one.ruku_add.RukuAddActivity"></activity>
        <activity android:name=".act.ruku_one.ruku_add.RukuDoAddActivity"></activity>
        <activity android:name=".act.ruku_one.RukuOKActivity"></activity>
        <activity android:name=".act.ruku_one.ruku_add.RukuUpdateActivity"></activity>

        <activity android:name=".act.chuku_action.ChukuActionActivity"></activity>

        <!-- 二类入库 -->
        <activity android:name=".act.ruku_two.ruku_record.RukuRecordActivity"></activity>


        <!-- end -->
        <activity
            android:name=".act.old.order.OrderInfoActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".act.mine.MineInfoActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".act.mine.MineInfoUpdateActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".act.mine.MinePwdActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity
            android:name="com.honeywell.barcodeexample.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <!--<intent-filter>-->
                <!--<action android:name="android.intent.action.MAIN" />-->

                <!--<category android:name="android.intent.category.LAUNCHER" />-->
            <!--</intent-filter>-->
        </activity>
        <activity
            android:name="com.honeywell.barcodeexample.AutomaticBarcodeActivity"
            android:label="@string/barcode"
            android:screenOrientation="portrait">
            <!--<intent-filter>-->
                <!--<action android:name="android.intent.action.AUTOMATICBARCODEACTIVITY" />-->

                <!--<category android:name="android.intent.category.DEFAULT" />-->
            <!--</intent-filter>-->
        </activity>
        <activity
            android:name="com.honeywell.barcodeexample.ClientBarcodeActivity"
            android:label="@string/barcode"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.CLIENTBARCODEACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.honeywell.barcodeexample.ScannerSelectionBarcodeActivity"
            android:label="@string/barcode"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.SCANNERSELECTBARCODEACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>

</manifest>